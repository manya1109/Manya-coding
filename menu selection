#include<stdio.h>

int main()
{
    int ch;
    printf("Menu:\n");
	printf("Enter 1 for Pizza.\nEnter 2 for Macroni.\nEnter 3 for Pasta.\nEnter 4 for Burger.\nEnter 5 for Momos.\n");
    printf("Enter your choice.\n");
    scanf("%d",&ch);
    switch(ch)
    {
    case 1:
        printf("Food item- Pizza\n");
        printf("Price- Rs.400");
        break;
    case 2:
        printf("Food item- Macroni\n");
        printf("Price- Rs.189");
        break;
    case 3:
        printf("Food item- Pasta\n");
        printf("Price- Rs.199");
        break;
    case 4:
       printf("Food item- Burger\n");
       printf("Price- Rs.159");
        break;
    case 5:
       printf("Food item- Momos\n");
       printf("Price- Rs.99");
        break;    
    default:
        printf("Invalid option");
    }
    return 0;
}
